<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaporanActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/navy"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/navy"
                android:src="@drawable/back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/katahome"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:lines="2"
                    android:text="Di halaman ini, Anda akan menemukan ringkasan pemasukan dan pengeluaran"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/pempeng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf= "@id/card">


        <ImageButton
            android:id="@+id/lprlr"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/btnkng"
            android:layout_marginTop="25dp"
            />

        <ImageButton
            android:id="@+id/lprmsk"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/btnabu" />
    </LinearLayout>
    <TextView
        android:id="@+id/ket"
        android:layout_width="217dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="Laporan Secara Keseluruhan"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pempeng"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/lprn"
        android:layout_width="346dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/grey"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ket">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="78dp"
                android:layout_height="35dp"
                android:text="24 Okt 2023 10:43 PM"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="Makanan"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="100.000"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdknig"
        android:layout_width="310dp"
        android:layout_height="64dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/crdkng"
        android:backgroundTint="@color/yellow"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lprn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pengeluaran"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300.000"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="32dp"
            android:background="@color/white"
            android:src="@drawable/beranda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btntbgn" />

        <ImageButton
            android:id="@+id/btntbgn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="32dp"
            android:background="@color/white"
            android:src="@drawable/tabungan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnprofil"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="32dp"
            android:background="@color/white"
            android:src="@drawable/profil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btntbgn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>