<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RincianBulanActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/navy"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/navy"
                android:src="@drawable/back" />

            <LinearLayout
                android:id="@+id/teks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tabungan Impian"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/katahome"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:lines="2"
                    android:text="Di halaman ini, ditampilkan rincian menyisihkan uang "
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/impian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Camera Impian"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintVertical_bias="0.04" />
    <LinearLayout
        android:id="@+id/btnpilihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf= "@id/impian">


        <ImageButton
            android:id="@+id/hari"
            android:layout_width="69dp"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/hariabu"
            android:layout_marginTop="25dp"
            />

        <ImageButton
            android:id="@+id/minggu"
            android:layout_width="69dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/mingguan" />
        <ImageButton
            android:id="@+id/bulan"
            android:layout_width="69dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/bulankng" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnhr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf= "@id/btnpilihan">
        <androidx.cardview.widget.CardView
            android:id="@+id/crdknig"
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/card_selector">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:text="01 0kt 23"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/crdabu"
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/card_selector">

            <TextView
                android:id="@id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:text="02 0kt 23"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>